#!/bin/bash

if [ -z "${WORKSPACE_HOME}" ]
then
   WORKSPACE_HOME=~/workspaces
fi

WS=$1
WS_PATH="${WORSPACE_HOME}/${WS}"

if [ -z "${WS}" -o ! -f "${WS_PATH}/Vagrantfile" ]
then
    echo "No such workspace '${WS}' in ${WORKSPACE_HOME}"
    exit 1
fi

cd ${WORKSPACE_HOME}/${WS}
DUMMY=$( vagrant status | grep running )

if [ $? -eq 0 ]
then
    echo "VM already running..."
else
    vagrant up
fi

vagrant ssh
